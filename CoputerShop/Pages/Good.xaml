<Page x:Class="CoputerShop.Pages.Good"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoputerShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="Good">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="740"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel Orientation="Vertical" Margin="5">
                <Button x:Name="b_user" Content="Пользователь" Width="200" Height="30" Margin="5"/>
                <Button x:Name="b_shop" Content="Магазин" Width="200" Height="30" Margin="5"/>
                <Button x:Name="b_red" Content="Редактировать" Width="200" Height="30" Margin="5"/>
                <Button x:Name="b_cart" Content="Ваша корзина" Width="200" Height="30" Margin="5"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <StackPanel>
                
            </StackPanel>
        </Grid>
    </Grid>
</Page>
